<% unless comment.archived? %>
  <div class="mb-3">
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </div>

  <div class="mb-3">
    <strong>Comment:</strong>
    <%= comment.body %>
  </div>

  <div>
    <%= link_to "Destroy Comment", [comment.article, comment], 
                method: :delete, 
                data: { turbo_confirm: "Are you sure?" },
                class: "btn btn-danger" %>
  </div>
<% end %>
